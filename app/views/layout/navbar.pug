nav.navbar.navbar-toggleable-md.navbar-inverse.bg-inverse.fixed-top
  button.navbar-toggler.navbar-toggler-right(type="button" data-toggle="collapse" data-target="#navbar-collapse")
    span.navbar-toggler-icon
  a.navbar-brand(href="/") FCC Book Club
  .navbar-collapse.collapse#navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item
        a.nav-link(href='/books') All Books
      if isLoggedIn
        li.nav-item
          a.nav-link(href='/users/' + user._id + '/books') My Books
        li.nav-item
          a.nav-link(href='/users/' + user._id + '/trades') My Trades
    form.form-inline.my-2.my-lg-0(action=href='/search' method='post')
      input.form-control.mr-sm-2(type="text" name="query" placeholder="Search")
      button.btn.btn-outline-primary.my-2.my-sm-0(type="submit") Search
    ul.navbar-nav.navbar-right
      li.nav-item
        if isLoggedIn
          a.nav-link(href='/users/' + user._id) Profile
      li.nav-item
        if isLoggedIn
          a.nav-link(href="/logout") Logout
        else
          a.nav-link(href="/auth/twitter") Login with Twitter